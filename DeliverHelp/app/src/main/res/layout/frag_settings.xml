<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >
        <ImageView
            android:id="@+id/titleBg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#3f51b5" />
        <TextView
            android:id="@+id/titleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15dp"
            android:padding="10.0dip"
            android:text="我的设置"
            android:textColor="@color/white"
            android:singleLine="true" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:shrinkColumns="0"
    android:stretchColumns="0"
    >
<TableRow
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/setting_message"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信模板"
        android:paddingLeft="16dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/setting_mor"
        android:drawablePadding="16dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:paddingRight="8dp"
        android:src="@drawable/ic_navigate_next_black_36dp"
        />
</TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="8px"
        android:layout_height="1px"
        android:background="#9e9e9e"
        />
<TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:id="@+id/aboutus"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_location_on_black_18dp"
            android:drawablePadding="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:paddingRight="8dp"
            android:src="@drawable/ic_navigate_next_black_36dp"
            />
    </TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="8px"
        android:layout_height="1px"
        android:background="#9e9e9e"
        />
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:id="@+id/newfresh"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查更新"
            android:paddingLeft="16dp"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_cloud_download_black_18dp"
            android:drawablePadding="16dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:paddingRight="8dp"
            android:src="@drawable/ic_navigate_next_black_36dp"
            />
    </TableRow>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="8px"
        android:layout_height="1px"
        android:background="#9e9e9e"
        />
</TableLayout>

</LinearLayout>

</LinearLayout>